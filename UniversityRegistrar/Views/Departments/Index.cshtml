@{
  Layout = "_Layout";
}

@using UniversityRegistrar.Models;

<p>Welcome to University Departments!</p>

@if(@Model.Count == 0)
{
  <h3>The University currently has no Departments</h3>
}

@foreach(Department dept in Model)
{
  <li>@Html.ActionLink($"{dept.DepartmentName}","Details", new {id = dept.DepartmentId})</li>
}

<br>
<p>@Html.ActionLink("Add new Department", "Create")</p>