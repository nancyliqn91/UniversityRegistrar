@{
  Layout = "_Layout";
}

@model UniversityRegistrar.Models.Department;
@using UniversityRegistrar.Models;
@using System.Collections.Generic;

<h3>Department Details: @Html.DisplayFor(model => model.DepartmentName)</h3>

@if(@Model.Courses.Count == 0)
{
  <p>This department does not have any courses yet!</p>
}
else
{
  <h4>This department has the following courses:</h4>
  <ul>
  @foreach(Course course in Model.Courses)
  {
    
    <li>Course: @course.CourseName</li>
    
  }
  </ul>
}
<br>

<p>@Html.ActionLink("Edit Department", "Edit", new { id = Model.DepartmentId })</p>
<p>@Html.ActionLink("Delete Department", "Delete", new { id = Model.DepartmentId })</p>
<p>@Html.ActionLink("Add a Department", "Create", new { id = Model.DepartmentId })</p>
<p>@Html.ActionLink("Back to list", "Index")</p>