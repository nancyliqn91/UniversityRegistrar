@{
  Layout = "_Layout";
}

@model UniversityRegistrar.Models.Student
@using UniversityRegistrar.Models;

<h4>Add a new student</h4>

<p>@Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger", @style = "font-weight: 600;" })</p>

<p>@Html.ValidationMessageFor(model => model.Date, "", new { @class = "text-danger", @style = "font-weight: 600;" })</p>

@using (Html.BeginForm())
{
  @Html.LabelFor(model => model.Name)
  @Html.TextBoxFor(model => model.Name)

<!-- to be updated for date input -->
  @Html.LabelFor(model => model.Date)
  @Html.TextBoxFor(model => model.Date)

  <input type="submit" value="Add new student" />
}
<p>@Html.ActionLink("Show all students", "Index")</p>